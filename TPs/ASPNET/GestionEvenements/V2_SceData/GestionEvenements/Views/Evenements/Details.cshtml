@model Modele.Evenement

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Evenement</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TypeEvenement)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TypeEvenement.TypeEvenementId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Annee)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Annee)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateEvenement)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateEvenement)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Titre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Titre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Url)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Url)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Adresse)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Adresse.Pays)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.EvenementId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
<hr />
<h4 style="margin-top:20px">Participations</h4>

<table class="table">
    <thead>
    <tr>
        <th>
            Civilité
        </th>
        <th>
            Nom
        </th>
        <th>
            Activités
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Participations)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Participant.Civilite)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Participant.Prenom)&nbsp;
                @Html.DisplayFor(modelItem => item.Participant.Nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Participant.Activites)
            </td>
            <td>
                <a asp-controller="Participants" asp-action="Details" asp-route-id="@item.ParticipantId">Fiche</a>
            </td>
        </tr>
    }
    </tbody>
</table>	