@model IEnumerable<Modele.Participant>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-striped table-responsive">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Civilite)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prenom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AnneeNaissance)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AnneeDeces)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LieuNaissance)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Activites)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Url)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Civilite)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prenom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AnneeNaissance)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AnneeDeces)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LieuNaissance)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Activites)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Url)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ParticipantId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ParticipantId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ParticipantId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
